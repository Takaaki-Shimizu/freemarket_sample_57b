= render partial: "header"
.wrapper2
  .circle
    .circle__message
      = "出品"
    .circle__awesome
      = link_to "#" do
        %i.fa.fa-camera
.search-box
  .search-box__support
    .left-box
      = render partial: "search_side_bar"
    .right-box
      %p.result 
        = "#{params[:search]}の検索結果"
      .middle-product-set
        - @products.each do |product|
          .middle-product
            %a{href: "/products/#{product.id}"}
              .middle-product__image
                - if product.images.present?
                  = image_tag("#{product.images.first.image_url}", size: "200x200")
              .middle-product__description
                .middle-product__description__message
                  = product.name
                .middle-product__description__value
                  %p.middle-product__description__value__money
                    = "¥" + product.price.to_s(:delimited, delimiter: ',')
= render partial: "footer"

