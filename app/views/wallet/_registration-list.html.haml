.payment2
  .payment-way
    = "支払い方法"
  %hr.horizontal
  .middle-payment
    .card-list
      = "クレジットカード一覧"
    .personal-card
      .display-card
        .display-card__logo
          = image_tag "master-card.svg", size: "40x20"
        .destroy-card
          = link_to "削除する", root_path, class: "link-d"
        .display-card__number
          = "**** **** **** " + @default_card_information.last4
        .display-card__deadline
          - exp_month = @default_card_information.exp_month.to_s
          - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
          = exp_month + " / " + exp_year
      -# .destroy-card
      -#   = link_to "削除する", root_path, class: "link-d"
  .lower-payment
    %hr.horizontal
    .about-pay
      = link_to root_path, class: "link-p" do
        支払い方法について
        %i.fa.fa-chevron-right