.information-registration__base
  .information-registration__base__main-box
    .information-registration__base__main-box__inner-header
      住所入力
    .information-registration__base__main-box__click-area
    = form_for @user, url: new5_signup_index_path, method: :get, html: {class: 'form'} do |f|
      = f.fields_for :address do |i|  
        .information-registration__base__main-box__click-area__input
          = i.label :post_code, "郵便番号",class: "information-registration__base__main-box__click-area__input__information__label"
          %span.information-registration__base__main-box__click-area__input__caveat 必須
          = i.text_field :postal_code,placeholder: " 例）123-4567",class: "information-registration__base__main-box__click-area__input__information__text"
        .information-registration__base__main-box__click-area__input
          = i.label :prefecture_id,"都道府県", class: "information-registration__base__main-box__click-area__input__information__label" 
          %span.information-registration__base__main-box__click-area__input__caveat 必須
          = i.collection_select  :prefecture_id, Prefecture.all, :id, :name,class: "information-registration__base__main-box__click-area__input__information__prefecture"
        .information-registration__base__main-box__click-area__input
          = i.label :city,"市区町村",class: "information-registration__base__main-box__click-area__input__information__label "
          %span.information-registration__base__main-box__click-area__input__caveat 必須
          = i.text_field :city,placeholder: " 例）横浜市緑区",class: "information-registration__base__main-box__click-area__input__information__text"

        .information-registration__base__main-box__click-area__input
          = i.label :address,"番地",class: "information-registration__base__main-box__click-area__input__information__label" 
          %span.information-registration__base__main-box__click-area__input__caveat 必須
          = i.text_field :address,placeholder: " 例）青山1-1-1",class: "information-registration__base__main-box__click-area__input__information__text"

        .information-registration__base__main-box__click-area__input
          = i.label :building_name,"建物名",class: "information-registration__base__main-box__click-area__input__information__label"
          %span.information-registration__base__main-box__click-area__input__caveat__arbitrarily 任意
          = i.text_field :building_name,placeholder: " 例）柳ビル",class: "information-registration__base__main-box__click-area__input__information__text"

        .information-registration__base__main-box__click-area__input
          = i.label :building_phone_number,"電話",class: "information-registration__base__main-box__click-area__input__information__label"
          %span.information-registration__base__main-box__click-area__input__caveat__arbitrarily 任意
          = i.text_field :building_phone_number,placeholder: " 例）09012345678",class: "information-registration__base__main-box__click-area__input__information__text"

          .information-registration__base__main-box__click-area__input
          .information-registration__base__main-box__click-area__input__empty-box
          .information-registration__base__main-box__click-area__rink-btn
            = f.submit "次へ進む", class: "information-registration__base__main-box__click-area__rink-btn"
= render partial: "devise/registrations/form-footer" 


      